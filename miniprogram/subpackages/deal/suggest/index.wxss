.container {
  padding: 30rpx;
  background: #f5f6fa;
  min-height: 100vh;
}

.section {
  background: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.05);
}

.field {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.field text {
  font-size: 30rpx;
  width: 220rpx;
}

.field input {
  background: #f0f2f5;
  padding: 16rpx;
  border-radius: 12rpx;
  width: 300rpx;
}

.btn {
  width: 100%;
  background: #3a7afe;
  color: #fff;
  padding: 22rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.tabs {
  display: flex;
  margin-top: 30rpx;
}

.tab {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  background: #d7d9dd;
  border-radius: 12rpx;
}

.tab.active {
  background: #3a7afe;
  color: #fff;
}

.tips {
  margin-top: 30rpx;
  background: #fff9d9;
  padding: 20rpx;
  border-radius: 12rpx;
  color: #8d6b00;
}

.title {
  margin-top: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
}

.table {
  margin-top: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.thead, .trow {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  padding: 20rpx 8rpx;
  font-size: 26rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.thead {
  background: #f0f2f5;
  font-weight: bold;
}
