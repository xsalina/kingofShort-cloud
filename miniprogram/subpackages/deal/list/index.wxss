/* ================= 全局布局核心 ================= */
page {
  /* 去掉 height: 100% 和 overflow: hidden */
  min-height: 100vh;
  background-color: #eff2f5;
}

.container {
  /* 去掉 flex 布局，恢复默认文档流 */
  display: block; 
  padding: 0 30rpx;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

/* ================= 1. 头部区域 (不伸缩) ================= */
.search-section {
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  /* 去掉 flex-shrink，让它自然占位 */
}

/* 搜索框 */
.search-bar {
  background: #ffffff;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx 0 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}
.search-icon { margin-right: 10rpx; }
.search-input { flex: 1; font-size: 28rpx; color: #2d3436; height: 100%; }
.ph-style { color: #b2bec3; }
.clear-icon {
  width: 36rpx; height: 36rpx; background: #dfe6e9; color: #fff;
  border-radius: 50%; font-size: 20rpx; display: flex; align-items: center; justify-content: center;
  margin-right: 20rpx; z-index: 2;
}
.search-btn {
  width: 120rpx; height: 68rpx;
  background: linear-gradient(135deg, #00b894, #00cec9);
  color: #fff; font-size: 28rpx; font-weight: bold;
  border-radius: 34rpx; display: flex; align-items: center; justify-content: center;
  transition: all 0.2s; box-shadow: 0 4rpx 10rpx rgba(0, 184, 148, 0.2);
}
.search-btn:active { transform: scale(0.95); opacity: 0.9; }

/* 历史记录 */
.history-panel {
  padding-bottom: 30rpx;
  flex-shrink: 0;
}
.history-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; }
.h-title { font-size: 26rpx; font-weight: bold; color: #2d3436; }
.h-delete { padding: 10rpx; }
.del-icon { width: 30rpx; height: 30rpx; opacity: 0.5; }
.history-tags { display: flex; flex-wrap: wrap; gap: 20rpx; }
.tag {
  font-size: 24rpx; color: #636e72; background: #ffffff;
  padding: 10rpx 24rpx; border-radius: 30rpx;
  border: 1rpx solid rgba(0,0,0,0.03); box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
  max-width: 300rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
}
.tag:active { background: #e3fcef; color: #00b894; }

/* Tabs */
.tabs-wrapper {
  /* 核心：使用 sticky 吸顶 */
  position: -webkit-sticky;
  position: sticky;
  top: 0; /* 吸附在顶部 0px 处 */
  
  z-index: 999; /* 保证盖住列表 */
  
  /* 原有样式保持不变 */
  display: flex;
  background: #ffffff;
  padding: 8rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  overflow: hidden;
}
.tab-slider {
  position: absolute; top: 8rpx; left: 8rpx; bottom: 8rpx;
  width: calc((100% - 16rpx) / 3); /* 假设是3个Tab */
  background: #e3fcef; border-radius: 12rpx; z-index: 1;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}
.tab-item {
  flex: 1; text-align: center; padding: 16rpx 0;
  font-size: 28rpx; color: #999; border-radius: 12rpx;
  position: relative; z-index: 2; transition: color 0.3s; font-weight: 500;
}
.tab-item.active { color: #00b894; font-weight: bold; }


/* ================= 2. 列表区域 (Swiper 自适应) ================= */
.content-swiper {
 width: 100%;
}

.list-scroll-view {
  height: 100%;
  width: 100%;
}

/* 列表内容容器，padding在这里加，以免滚动条也被挤进去 */
.list-content-wrapper {
  padding-bottom: 40rpx;
}

.transactions-list {
  /* 这里不需要 padding，因为 container 已经有了左右 padding */
}

.have-nomore {
  margin: 30rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #a0a0a0;
}