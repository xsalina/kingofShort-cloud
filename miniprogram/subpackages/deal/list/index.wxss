.page {
  background: #F5F5F5;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ddd;
}

.tab-item {
  font-size: 28rpx;
  padding: 14rpx 0;
  color: #555;
}

.tab-item.active {
  color: #3D82FF;
  border-bottom: 4rpx solid #3D82FF;
  font-weight: bold;
}
