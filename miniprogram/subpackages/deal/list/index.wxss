.page {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.tab-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ddd;
  background: #f5f5f5;
}

.tab-item {
  font-size: 28rpx;
  padding: 14rpx 0;
  color: #555;
}

.tab-item.active {
  color: #3d82ff;
  border-bottom: 4rpx solid #3d82ff;
  font-weight: bold;
}
.transactions-list{
  padding: 0 20rpx;
  box-sizing: border-box;
}
.have-nomore {
  margin: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #a0a0a0;
}
