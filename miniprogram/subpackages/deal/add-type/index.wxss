/* ---------------- 全局容器 ---------------- */
.container {
  padding: 30rpx;
  background-color: #eff2f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* ---------------- 通用卡片 ---------------- */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(149, 157, 165, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3436;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #00b894; /* 主题绿条 */
  padding-left: 20rpx;
  line-height: 1;
}
/* ---------------- 1. 添加区域样式 (保持原有) ---------------- */
.form-item {
  margin-bottom: 30rpx;
  /* 【关键】给父容器设置 relative，限制下拉框的位置基准 */
  position: relative; 
}

.label {
  display: block;
  font-size: 26rpx;
  color: #636e72;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* --- 新增：输入框容器 (用于包裹 input 和 清空按钮) --- */
.input-wrapper {
  position: relative;
  width: 100%;
}

.input {
  background: #f7f9fc;
  height: 88rpx;
  border-radius: 12rpx;
  padding: 0 24rpx;
  /* 右边留出空间给清空按钮，防止文字重叠 */
  padding-right: 80rpx; 
  font-size: 30rpx;
  color: #2d3436;
  width: 100%; /* 确保填满容器 */
  box-sizing: border-box; /* 包含 padding */
}
.placeholder { color: #b2bec3; }

/* --- 新增：清空按钮 (悬浮在 input 内部右侧) --- */
.clear-btn {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%; /* 高度与 input 一致，垂直居中 */
  width: 80rpx; /* 点击区域大一点 */
  display: flex;
  align-items: center;
  justify-content: center;
  color: #b2bec3;
  font-size: 32rpx;
  z-index: 10;
}

/* ---------------- 2. 搜索联想下拉框 (核心新增) ---------------- */
.search-dropdown {
  position: absolute; /* 绝对定位，实现悬浮 */
  top: 100%; /* 紧贴输入框底部 */
  left: 0;
  right: 0; /* 宽度撑满 */
  margin-top: 12rpx; /* 稍微留点空隙 */
  
  background: #fff;
  border-radius: 12rpx;
  /* 强烈的阴影，营造悬浮感 */
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.12);
  border: 1rpx solid #edf2f7;
  
  max-height: 450rpx; /* 限制高度 */
  overflow-y: auto;   /* 内容过多时滚动 */
  z-index: 999;       /* 【最关键】必须比下面的市场选择器层级高 */
}

.search-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f7f9fc;
  transition: background 0.2s;
}

/* 最后一个去掉底边框 */
.search-item:last-child {
  border-bottom: none;
}

.search-item:active {
  background-color: #f7f9fc; /* 点击反馈 */
}

.search-info {
  display: flex;
  flex-direction: column;
}

.search-name {
  font-size: 28rpx;
  color: #2d3436;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.search-code {
  font-size: 22rpx;
  color: #b2bec3;
}

/* 搜索结果里的市场标签 */
.search-market {
  font-size: 20rpx;
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
  font-weight: 500;
}
/* 对应 JS 里的 class */
.search-market.blue { background: #e6f7ff; color: #0984e3; } /* 美股蓝 */
.search-market.red  { background: #ffeaa7; color: #d35400; } /* 港股橙红 */
.search-market.orange { background: #fff1f0; color: #e17055; } /* A股红 */


/* ---------------- 3. 市场选择器 (你原有的样式，稍微美化选中色) ---------------- */
.market-selector {
  display: flex;
  gap: 20rpx;
  /* 如果怕被下拉框挡住不好看，可以加一点 margin-top，但一般不用 */
}

.market-chip {
  flex: 1;
  height: 80rpx;
  background: #f7f9fc;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #636e72;
  transition: all 0.2s;
}

.chip-currency {
  font-size: 22rpx;
  margin-left: 8rpx;
  opacity: 0.6;
}

/* 选中状态 - 针对不同市场给不同边框色，体验更好 */
.market-chip.active {
  background: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

/* 分别对应你的 USD, HKD, CNY 类名 */
.market-chip.active.USD { border-color: #0984e3; color: #0984e3; }
.market-chip.active.HKD { border-color: #e17055; color: #e17055; }
.market-chip.active.CNY { border-color: #d63031; color: #d63031; }

.btn-add {
  background: #00b894;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 184, 148, 0.3);
  
  /* 增加过渡动画，让变灰的过程丝滑一点 */
  transition: all 0.3s; 
}

.btn-add:active { transform: scale(0.98); opacity: 0.9; }

/* 【新增】禁用/加载时的样式 */
.btn-add.btn-disabled {
  background: #81e0cc; /* 变浅一点的绿色，或者直接用 opacity */
  box-shadow: none;     /* 去掉阴影，显得按不下去了 */
  opacity: 0.7;
  color: rgba(255, 255, 255, 0.8);
}

/* ---------------- 2. 列表区域样式 ---------------- */
.list-title {
  font-size: 28rpx;
  color: #636e72;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.stock-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx; /* 稍微紧凑一点 */
  margin-bottom: 20rpx;
}

.item-left {
  display: flex;
  flex-direction: column;
}

.stock-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3436;
  margin-bottom: 12rpx;
}

.stock-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-weight: 500;
}

/* 市场标签配色 */
.market-tag.USD { background: #e7f5ff; color: #0984e3; }
.market-tag.HKD { background: #f3f0ff; color: #6c5ce7; }
.market-tag.CNY { background: #fff0f0; color: #ff7675; }

/* 货币标签 (统一灰色) */
.currency-tag {
  background: #f1f2f6;
  color: #636e72;
}

/* 删除按钮 */
.item-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.delete-icon {
  font-size: 32rpx;
  color: #b2bec3;
  padding: 10rpx;
}
.delete-icon:active { color: #ff7675; }

/* 空状态 */
.empty-state {
  text-align: center;
  color: #b2bec3;
  font-size: 26rpx;
  margin-top: 60rpx;
}