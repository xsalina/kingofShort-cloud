/* ---------------- 全局容器 ---------------- */
.container {
  padding: 30rpx;
  background-color: #eff2f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* ---------------- 通用卡片 ---------------- */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(149, 157, 165, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3436;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #00b894; /* 主题绿条 */
  padding-left: 20rpx;
  line-height: 1;
}

/* ---------------- 1. 添加区域样式 ---------------- */
.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #636e72;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  background: #f7f9fc;
  height: 88rpx;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #2d3436;
}
.placeholder { color: #b2bec3; }

/* 市场选择器 (胶囊) */
.market-selector {
  display: flex;
  gap: 20rpx;
}

.market-chip {
  flex: 1;
  height: 80rpx;
  background: #f7f9fc;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #636e72;
  transition: all 0.2s;
}

.chip-currency {
  font-size: 22rpx;
  margin-left: 8rpx;
  opacity: 0.6;
}

/* 选中状态 - 根据不同市场变色 */
.market-chip.active {
  background: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.market-chip.active.USD { border-color: #0984e3; color: #0984e3; background: #e7f5ff; }
.market-chip.active.HKD { border-color: #6c5ce7; color: #6c5ce7; background: #f3f0ff; }
.market-chip.active.CNY { border-color: #ff7675; color: #ff7675; background: #fff0f0; }

.btn-add {
  background: #00b894;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 184, 148, 0.3);
  
  /* 增加过渡动画，让变灰的过程丝滑一点 */
  transition: all 0.3s; 
}

.btn-add:active { transform: scale(0.98); opacity: 0.9; }

/* 【新增】禁用/加载时的样式 */
.btn-add.btn-disabled {
  background: #81e0cc; /* 变浅一点的绿色，或者直接用 opacity */
  box-shadow: none;     /* 去掉阴影，显得按不下去了 */
  opacity: 0.7;
  color: rgba(255, 255, 255, 0.8);
}

/* ---------------- 2. 列表区域样式 ---------------- */
.list-title {
  font-size: 28rpx;
  color: #636e72;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.stock-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx; /* 稍微紧凑一点 */
  margin-bottom: 20rpx;
}

.item-left {
  display: flex;
  flex-direction: column;
}

.stock-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3436;
  margin-bottom: 12rpx;
}

.stock-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-weight: 500;
}

/* 市场标签配色 */
.market-tag.USD { background: #e7f5ff; color: #0984e3; }
.market-tag.HKD { background: #f3f0ff; color: #6c5ce7; }
.market-tag.CNY { background: #fff0f0; color: #ff7675; }

/* 货币标签 (统一灰色) */
.currency-tag {
  background: #f1f2f6;
  color: #636e72;
}

/* 删除按钮 */
.item-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.delete-icon {
  font-size: 32rpx;
  color: #b2bec3;
  padding: 10rpx;
}
.delete-icon:active { color: #ff7675; }

/* 空状态 */
.empty-state {
  text-align: center;
  color: #b2bec3;
  font-size: 26rpx;
  margin-top: 60rpx;
}