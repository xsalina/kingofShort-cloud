/* ---------------- 全局容器 ---------------- */
/* 确保页面底色一致 */
page {
  background-color: #eff2f5; 
  /* 如果你的 container 有 min-height: 100vh，这里很重要 */
  overflow-x: hidden; /* 防止左右晃动 */
}

.container {
  padding: 30rpx;
  background-color: #eff2f5;
  min-height: 100vh;
  box-sizing: border-box;
  
  /* 加上这一句，保证上移时更流畅 */
  will-change: transform;
}

/* ---------------- 通用卡片 ---------------- */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(149, 157, 165, 0.05);
}

/* ---------------- 1. 标的选择区域 ---------------- */
/* 头部标题栏保持不变 */
.section-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3436;
  padding-left: 10rpx;
  border-left: 6rpx solid #00b894;
  line-height: 1;
}
.link-btn {
  font-size: 24rpx;
  color: #00b894;
  display: flex;
  align-items: center;
}
.arrow { margin-left: 4rpx; font-weight: bold; }

/* === 核心改动：输入框样式 === */
.input-wrap {
  background: #f7f9fc;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid transparent;
  transition: all 0.3s;
}

/* 聚焦时的高亮效果 */
.input-wrap:focus-within {
  background: #fff;
  border-color: #00b894;
  box-shadow: 0 0 0 4rpx rgba(0, 184, 148, 0.1);
}

.input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #2d3436;
  font-weight: 500;
}
.ph-style { color: #b2bec3; }

/* 清除按钮小叉叉 */
.clear-icon {
  width: 36rpx; height: 36rpx;
  background: #dfe6e9; color: #fff;
  border-radius: 50%; font-size: 20rpx;
  display: flex; align-items: center; justify-content: center;
  margin-left: 10rpx; z-index: 2;
}

/* === 下拉列表样式 (悬浮) === */
.search-dropdown {
  position: absolute;
  top: 90rpx; /* 在输入框下方 */
  left: 0; right: 0;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
  max-height: 500rpx;
  overflow-y: auto;
  z-index: 100; /* 保证浮在最上面 */
  border: 1rpx solid #f0f0f0;
}

.search-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #fff; /* 默认白底 */
  border-bottom: 1rpx solid #f9f9f9;
  
  /* 【关键】添加过渡动画，让松手时的颜色渐变消失，更有质感 */
  transition: background-color 0.2s;
}

/* === 【核心】按压状态 (Active State) === */
/* 当手指按住这一行时触发 */
.search-item:active {
  /* 变更为主题淡绿色 */
  background-color: #e3fcef; 
}

/* 如果你想让文字在按住时也变色 (可选) */
.search-item:active .search-name {
  color: #00b894; /* 名字变绿 */
}

.search-info { display: flex; flex-direction: column; }
.search-name { font-size: 28rpx; color: #2d3436; font-weight: bold; margin-bottom: 4rpx; }
.search-code { font-size: 22rpx; color: #b2bec3; font-family: sans-serif; }

/* 市场标签 */
.search-market.tag {
  font-size: 20rpx; padding: 4rpx 10rpx; border-radius: 6rpx; font-weight: bold;
}
.tag.blue { background: #e6f7ff; color: #1890ff; }
.tag.red  { background: #fff1f0; color: #f5222d; }
.tag.orange { background: #fff7e6; color: #fa8c16; }

/* 空状态大按钮 */
.empty-stock-btn {
  height: 100rpx;
  border: 2rpx dashed #00b894;
  background: #e3fcef;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #00b894;
  font-size: 28rpx;
  font-weight: 600;
}
.add-icon { font-size: 36rpx; margin-right: 10rpx; margin-top: -4rpx; }


.section-title-simple {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3436;
  padding-left: 10rpx;
  border-left: 6rpx solid #00b894;
  line-height: 1;
  margin-bottom: 24rpx;
}
/* ---------------- 2. 表单区域 ---------------- */
.form-row { display: flex; gap: 30rpx; }
.mt-30 { margin-top: 30rpx; }
.form-col { flex: 1; }

.label {
  font-size: 24rpx;
  color: #636e72;
  margin-bottom: 12rpx;
  display: block;
}

.input-wrap {
  display: flex;
  align-items: center;
  background: #f7f9fc;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 88rpx;
  border: 1rpx solid transparent;
  transition: all 0.3s;
}
.input-wrap:focus-within {
  background: #fff;
  border-color: #00b894;
  box-shadow: 0 0 0 4rpx rgba(0, 184, 148, 0.1);
}

.input { flex: 1; height: 100%; font-size: 32rpx; color: #2d3436; font-weight: 600; }
.prefix { font-size: 32rpx; color: #636e72; margin-right: 12rpx; font-weight: bold; }
.suffix { font-size: 26rpx; color: #b2bec3; margin-left: 12rpx; }


/* ---------------- 3. 结果卡片 ---------------- */
.result-card {
  background: #f1f2f6;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.result-card.active {
  background: #e3fcef;
  border-color: #00b894;
}

.result-header {
  font-size: 26rpx;
  color: #636e72;
  margin-bottom: 24rpx;
  display: flex; align-items: center;
}
.icon { margin-right: 8rpx; }

.row-between { display: flex; justify-content: space-between; align-items: center; }
.text-right { text-align: right; align-items: flex-end; }

.result-item { display: flex; flex-direction: column; flex: 1; }

.res-label { font-size: 24rpx; color: #636e72; margin-bottom: 8rpx; }
.res-num {
  font-size: 40rpx;
  font-weight: bold;
  font-family: 'DIN Alternate', sans-serif;
  color: #b2bec3;
}

/* 激活颜色 */
.active .text-primary { color: #00b894; }
.active .text-warn { color: #ff7675; }

.divider { width: 2rpx; height: 60rpx; background: rgba(0,0,0,0.05); margin: 0 30rpx; }

.cost-tips {
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 2rpx dashed rgba(0,0,0,0.05);
  font-size: 22rpx;
  color: #b2bec3;
  text-align: center;
}
.active .cost-tips { color: #7f8c8d; border-color: rgba(0, 184, 148, 0.2); }


/* ---------------- 4. 提交按钮 ---------------- */
.btn-submit {
  background: linear-gradient(135deg, #00b894, #00cec9);
  color: #fff;
  border-radius: 50rpx;
  font-weight: bold;
  font-size: 34rpx;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 184, 148, 0.3);
  border: none;
  transition: all 0.3s;
}
.btn-submit:active { transform: scale(0.98); opacity: 0.9; }
.btn-submit.disabled { background: #b2bec3; box-shadow: none; opacity: 0.7; }






