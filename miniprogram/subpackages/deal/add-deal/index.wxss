/* ---------------- 全局容器 ---------------- */
/* 确保页面底色一致 */
page {
  background-color: #eff2f5; 
  /* 如果你的 container 有 min-height: 100vh，这里很重要 */
  overflow-x: hidden; /* 防止左右晃动 */
}

.container {
  padding: 30rpx;
  background-color: #eff2f5;
  min-height: 100vh;
  box-sizing: border-box;
  
  /* 加上这一句，保证上移时更流畅 */
  will-change: transform;
}

/* ---------------- 通用卡片 ---------------- */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(149, 157, 165, 0.05);
}

/* ---------------- 1. 标的选择区域 ---------------- */
.section-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3436;
  padding-left: 10rpx;
  border-left: 6rpx solid #00b894;
  line-height: 1;
}

.section-title-simple {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3436;
  padding-left: 10rpx;
  border-left: 6rpx solid #00b894;
  line-height: 1;
  margin-bottom: 24rpx;
}

/* 右侧小入口链接 */
.link-btn {
  font-size: 24rpx;
  color: #0984e3;
  display: flex;
  align-items: center;
  background: #f0f8ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}
.link-btn:active { opacity: 0.6; }
.link-btn .arrow { margin-left: 4rpx; font-weight: bold; font-family: monospace; }

/* 空状态大按钮 */
.empty-stock-btn {
  height: 100rpx;
  border: 2rpx dashed #00b894;
  background: #e3fcef;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #00b894;
  font-size: 28rpx;
  font-weight: 600;
}
.add-icon { font-size: 36rpx; margin-right: 10rpx; margin-top: -4rpx; }

/* 选择器样式 */
.picker-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.picker-val { font-size: 32rpx; color: #b2bec3; }
.picker-val.active { color: #2d3436; font-weight: bold; font-size: 34rpx; }
.picker-arrow { color: #dfe6e9; font-size: 24rpx; }

/* 市场标签 */
.picker-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}
.picker-tag.USD { background: #e7f5ff; color: #0984e3; }
.picker-tag.HKD { background: #f3f0ff; color: #6c5ce7; }
.picker-tag.CNY { background: #fff0f0; color: #ff7675; }


/* ---------------- 2. 表单区域 ---------------- */
.form-row { display: flex; gap: 30rpx; }
.mt-30 { margin-top: 30rpx; }
.form-col { flex: 1; }

.label {
  font-size: 24rpx;
  color: #636e72;
  margin-bottom: 12rpx;
  display: block;
}

.input-wrap {
  display: flex;
  align-items: center;
  background: #f7f9fc;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 88rpx;
  border: 1rpx solid transparent;
  transition: all 0.3s;
}
.input-wrap:focus-within {
  background: #fff;
  border-color: #00b894;
  box-shadow: 0 0 0 4rpx rgba(0, 184, 148, 0.1);
}

.input { flex: 1; height: 100%; font-size: 32rpx; color: #2d3436; font-weight: 600; }
.prefix { font-size: 32rpx; color: #636e72; margin-right: 12rpx; font-weight: bold; }
.suffix { font-size: 26rpx; color: #b2bec3; margin-left: 12rpx; }


/* ---------------- 3. 结果卡片 ---------------- */
.result-card {
  background: #f1f2f6;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.result-card.active {
  background: #e3fcef;
  border-color: #00b894;
}

.result-header {
  font-size: 26rpx;
  color: #636e72;
  margin-bottom: 24rpx;
  display: flex; align-items: center;
}
.icon { margin-right: 8rpx; }

.row-between { display: flex; justify-content: space-between; align-items: center; }
.text-right { text-align: right; align-items: flex-end; }

.result-item { display: flex; flex-direction: column; flex: 1; }

.res-label { font-size: 24rpx; color: #636e72; margin-bottom: 8rpx; }
.res-num {
  font-size: 40rpx;
  font-weight: bold;
  font-family: 'DIN Alternate', sans-serif;
  color: #b2bec3;
}

/* 激活颜色 */
.active .text-primary { color: #00b894; }
.active .text-warn { color: #ff7675; }

.divider { width: 2rpx; height: 60rpx; background: rgba(0,0,0,0.05); margin: 0 30rpx; }

.cost-tips {
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 2rpx dashed rgba(0,0,0,0.05);
  font-size: 22rpx;
  color: #b2bec3;
  text-align: center;
}
.active .cost-tips { color: #7f8c8d; border-color: rgba(0, 184, 148, 0.2); }


/* ---------------- 4. 提交按钮 ---------------- */
.btn-submit {
  background: linear-gradient(135deg, #00b894, #00cec9);
  color: #fff;
  border-radius: 50rpx;
  font-weight: bold;
  font-size: 34rpx;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 184, 148, 0.3);
  border: none;
  transition: all 0.3s;
}
.btn-submit:active { transform: scale(0.98); opacity: 0.9; }
.btn-submit.disabled { background: #b2bec3; box-shadow: none; opacity: 0.7; }

/* 固定在底部的容器 */
.voice-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #ffffff;
  padding: 20rpx 0rpx;
  /* 适配 iPhone X 等全面屏底部的黑条 */
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 按钮主体 */
.voice-btn {
  width: 100% !important; /* 强制撑满 */
  height: 90rpx;
  line-height: 90rpx;
  background: #07c160; /* 微信绿，也可以换成你的主题色 */
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s;
}

/* 按钮内的图标 */
.voice-btn .icon {
  margin-right: 10rpx;
  font-size: 36rpx;
}

/* 按住时的样式（变灰） */
.voice-btn.recording {
  background: #cfcfcf;
  color: #555;
  transform: scale(0.98); /* 微微缩小，有按压感 */
}

/* 底部小字提示 */
.tips {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}