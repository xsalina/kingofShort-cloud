/* 卡片 */
.add-card {
  width: calc(100% - 40rpx);
  margin: 0 20rpx 20rpx 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}
.card-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

/* 表单行 */
.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.label {
  font-size: 28rpx;
  color: #555;
}
.input {
  flex: 1;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 6rpx 10rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.picker {
  flex: 1;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 6rpx 10rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}

/* 按钮 */
.btn {
  margin-top: 15rpx;
  background-color: #1e90ff;
  color: #fff;
  font-size: 30rpx;
  border-radius: 12rpx;
  padding: 12rpx 0;
  text-align: center;
}
.row.wrap {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 12rpx;
}

.label {
  font-size: 28rpx;
  color: #555;
  min-width: 120rpx; /* label 最小宽度，可以换行 */
  margin-bottom: 6rpx; /* 如果换行，和输入框保持间距 */
}

.input-full,
.picker-full {
  flex: 1;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 6rpx 10rpx;
  font-size: 28rpx;
  min-width: 150rpx; /* 防止太窄 */
}

