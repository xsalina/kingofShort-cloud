<view class="page">
  <view class="mine-header">
    <text class="mine-title">注册</text>
  </view>
  <view class="container">
    <unification-avatar />
    <view class="form-view">
      <view class="row wrap">
        <view class="label">姓名</view>
        <input class="input-full" maxlength="10" type="text" placeholder="请输入姓名" bindinput="onNameInput" />
      </view>
      <view class="row wrap">
        <view class="label">手机号</view>
        <input class="input-full" maxlength="11" type="number" placeholder="请输入手机号" bindinput="onPhoneInput" />
      </view>
      <button bindtap="onSubmit" disabled="{{disabled}}" class="add-btn {{disabled?'btn-disabled':''}}">
        {{disabled ? "注册中..." : "注册"}}
      </button>
    </view>
  </view>
</view>