/* 页面背景 */
page {
  background-color: #ffffff;
}

.container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* ---------------- 1. 头部样式 ---------------- */
.header {
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.logo-box {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #e3fcef, #f0fdfa);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 184, 148, 0.1);
}

.logo-text {
  font-size: 60rpx;
}

.logo-img {
  width: 100%;
  height: 100%;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 900;
  color: #2d3436;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #b2bec3;
  font-weight: 500;
}

/* ---------------- 2. 表单样式 ---------------- */
.form-card {
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #2d3436;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 100rpx;
  background-color: #f7f9fc; /* 极淡的灰蓝色背景，很显高级 */
  border-radius: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #2d3436;
  font-weight: 500;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

/* 输入框聚焦时的效果 */
.input:focus {
  background-color: #fff;
  border-color: #00b894; /* 聚焦变绿 */
  box-shadow: 0 0 0 6rpx rgba(0, 184, 148, 0.1);
}

.placeholder {
  color: #dfe6e9;
}

/* ---------------- 3. 按钮样式 ---------------- */
.action-area {
  margin-top: 20rpx;
}

.btn-login {
  width: 100% !important;
  height: 100rpx;
  /* 品牌渐变色 */
  background: linear-gradient(135deg, #00b894, #00cec9);
  color: #fff;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 25rpx rgba(0, 184, 148, 0.3);
  transition: all 0.3s;
}

.btn-login:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 15rpx rgba(0, 184, 148, 0.2);
}

.btn-login[disabled] {
  opacity: 0.7;
  background: #00b894;
}

.privacy-text {
  display: block;
  text-align: center;
  margin-top: 30rpx;
  font-size: 22rpx;
  color: #b2bec3;
}