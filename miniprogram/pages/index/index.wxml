<!-- pages/index/index.wxml -->
<view class="container">
  <!-- 收益统计栏 -->
  <view class="stats-bar">
    <view class="stat-item" bindtap="onMonthProfitTap">
      <view class="stat-title">本月收益</view>
      <view class="stat-values">
        <text class="currency">$ {{monthProfitUSD}}</text>
        <text class="currency">¥ {{monthProfitCNY}}</text>
        <text class="currency">HK$ {{monthProfitHKD}}</text>
      </view>
    </view>
    <view class="stat-item" bindtap="onTotalProfitTap">
      <view class="stat-title">总收益</view>
      <view class="stat-values">
        <text class="currency">$ {{totalProfitUSD}}</text>
        <text class="currency">¥ {{totalProfitCNY}}</text>
        <text class="currency">HK$ {{totalProfitHKD}}</text>
      </view>
    </view>
  </view>
  <view class="tx-list">
    <block wx:for="{{transactions}}" wx:key="id">
      <record-card stockName="{{item.stockName}}" status="{{item.status}}" currency="{{item.currency}}" buyPrice="{{item.buyPrice}}" buyQty="{{item.buyQty}}" buyTime="{{item.buyTime}}" sold="{{item.sold}}" sellPrice="{{item.sellPrice}}" sellQty="{{item.sellQty}}" sellTime="{{item.sellTime}}" profit="{{item.profit}}"></record-card>
    </block>
  </view>
  <view wx:if="{{transactions.length >= 6}}" class="load-more-btn" bindtap="goToAllRecords">
    <text>查看更多</text>
    <text class="arrow">›</text>
  </view>

  <add-transaction-btn/>
</view>