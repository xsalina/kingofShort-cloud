<!-- pages/index/index.wxml -->
<view class="container">
  <!-- 收益统计栏 -->
  <view class="stats-bar">
    <view class="stat-item" bindtap="onMonthProfitTap">
      <view class="stat-title">本月收益</view>
      <view class="stat-values">
        <text class="currency">$ {{monthProfit['$'] || 0}}</text>
        <text class="currency">¥ {{monthProfit['¥'] || 0}}</text>
        <text class="currency">HK$ {{monthProfit['HK$'] || 0}}</text>
      </view>
    </view>
    <view class="stat-item" bindtap="onTotalProfitTap">
      <view class="stat-title">总收益</view>
      <view class="stat-values">
        <text class="currency">$ {{totalProfit['$'] || 0}}</text>
        <text class="currency">¥ {{totalProfit['¥'] || 0}}</text>
        <text class="currency">HK$ {{totalProfit['HK$'] || 0}}</text>
      </view>
    </view>
  </view>
  <view class="tx-list">
    <block wx:for="{{transactions}}" wx:key="id">
      <record-card cardItem="{{item}}"></record-card>
    </block>
  </view>
  <view wx:if="{{transactions.length >= 4}}" class="load-more-btn" bindtap="goToAllRecords">
    <text>查看更多</text>
    <text class="arrow">›</text>
  </view>
  <block wx:if="{{transactions.length === 0 && loaded}}">
    <!-- 空状态 -->
    <empty-tips />
  </block>
</view>