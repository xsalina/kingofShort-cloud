<view class="container {{isIpx ? 'ipxPbottom' : ''}}">
  <view class="dashboard-container">
  <view class="bento-wrapper">
    
    <view class="bento-main">
      <view class="bento-header">
        <text class="label">本月收益 (USD)</text>
        <view class="trend-icon">📈</view>
      </view>
      <view class="bento-value">
        <text class="symbol">$</text>
        <text class="num">{{monthProfit['$'] || '0.00'}}</text>
      </view>
      <view class="bento-footer">
        <text class="sub-label">累计</text>
        <text class="sub-val">${{totalProfit['$'] || '0.00'}}</text>
      </view>
      <view class="circle-decor"></view>
    </view>

    <view class="bento-side">
      <view class="bento-item usd-item">
        <view class="side-label">CNY (¥)</view>
        <view class="side-val">{{monthProfit['¥'] || '0'}}</view>
      </view>
      <view class="bento-item hkd-item">
        <view class="side-label">HKD (HK$)</view>
        <view class="side-val">{{monthProfit['HK$'] || '0'}}</view>
      </view>
    </view>

  </view>
</view>

  <view class="section-header row-between">
    <text class="font-bold font-lg">最近交易</text>
  </view>

  <view class="transaction-list">
     <block wx:for="{{transactions}}" wx:key="id">
      <record-card cardItem="{{item}}"></record-card>
    </block>
  </view>
  <block wx:if="{{transactions.length === 0 && loaded}}">
    <empty-tips />
  </block>

  <view wx:if="{{transactions.length >= 10}}" class="more-entry" bindtap="goToAllRecords">
    <text>查看更多历史交易</text>
    <text class="more-arrow">➜</text>
  </view>

  

</view>