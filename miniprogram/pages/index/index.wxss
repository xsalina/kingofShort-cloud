
/* ---------------- 全局布局 ---------------- */
.container {
  padding: 20rpx 20rpx 180rpx 20rpx;
  /* 底部留白减少，因为去掉了FAB按钮 */
  background-color: #eff2f5; 
  min-height: 100vh;
}
.ipxPbottom{
  padding-bottom: 260rpx;
}
/* ---------------- 顶部资产看板 (极光薄荷版) ---------------- */
.dashboard-container {
  margin-top: 10rpx;
  margin-bottom: 40rpx;
}

.bento-wrapper {
  display: flex;
  height: 320rpx; /* 固定高度 */
  gap: 20rpx; /* 块之间的间距 */
}

/* --- 左侧主块 --- */
.bento-main {
  flex: 1.4; /* 占比大 */
  background: linear-gradient(135deg, #00b894, #00a884); /* 品牌绿深色 */
  border-radius: 30rpx;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 10rpx 30rpx rgba(0, 184, 148, 0.3);
}

.bento-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bento-header .label { font-size: 24rpx; opacity: 0.8; }
.trend-icon { font-size: 32rpx;  border-radius: 50%; padding: 4rpx; }

.bento-value {
  margin-top: 10rpx;
}
.bento-value .symbol { font-size: 36rpx; margin-right: 8rpx; opacity: 0.9; }
.bento-value .num { font-size: 72rpx; font-weight: bold; font-family: 'DIN Alternate'; }

.bento-footer {
  background: rgba(0,0,0,0.1);
  border-radius: 12rpx;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.sub-label { font-size: 22rpx; opacity: 0.7; }
.sub-val { font-size: 26rpx; font-weight: bold; }

/* 装饰圆 */
.circle-decor {
  position: absolute;
  right: -40rpx; bottom: -40rpx;
  width: 200rpx; height: 200rpx;
  border-radius: 50%;
  border: 20rpx solid rgba(255,255,255,0.05);
}

/* --- 右侧副块 --- */
.bento-side {
  flex: 1; /* 占比小 */
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.bento-item {
  flex: 1;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.usd-item {
  background: #fff;
  border: 1rpx solid #e0f2f1; /* 极淡的绿边框 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}
.hkd-item {
  background: #f0fdfa; /* 极淡的绿背景 */
  border: 1rpx solid #ccfbf1;
}

.side-label {
  font-size: 22rpx;
  color: #636e72;
  margin-bottom: 8rpx;
  font-weight: 500;
}
.side-val {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3436;
  font-family: 'DIN Alternate';
}
/* ---------------- 列表通用样式 ---------------- */
.section-header { margin-bottom: 20rpx; padding: 0 10rpx; }
.font-lg { font-size: 34rpx; color: #2d3436; }



/* ---------------- 查看更多入口 (卡片式) ---------------- */
.more-entry {
  background-color: #ffffff;
  margin-top: -10rpx;
  margin-bottom: 40rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #636e72;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  transition: all 0.2s;
}

.more-entry:active {
  background-color: #f8f9fa;
  transform: scale(0.99);
}

.more-arrow {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #b2bec3;
}