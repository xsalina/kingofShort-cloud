.container {
  padding: 0;
  background-color: #f0f2f5;
  min-height: 100vh;
}

/* 页头 */
.header {
  text-align: center;
  margin-bottom: 20rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e90ff;
}
.profit-row {
  display: flex;
  justify-content: space-around;
  margin-top: 8rpx;
  font-size: 28rpx;
}
.profit {
  color: #ff4500;
  font-weight: bold;
}

/* 卡片 */
.card {
  width: calc(100% - 40rpx);
  margin: 0 20rpx 20rpx 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}
.card-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

/* 表单行 */
.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.label {
  font-size: 28rpx;
  color: #555;
}
.input {
  flex: 1;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 6rpx 10rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.picker {
  flex: 1;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 6rpx 10rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}

/* 按钮 */
.btn {
  margin-top: 15rpx;
  background-color: #1e90ff;
  color: #fff;
  font-size: 30rpx;
  border-radius: 12rpx;
  padding: 12rpx 0;
  text-align: center;
}
.sellBtn {
  background-color: #32cd32;
  color: #fff;
  font-size: 28rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
}

/* 交易记录 */
.record {
  padding: 12rpx;
  margin-bottom: 12rpx;
  border-radius: 12rpx;
}
.record-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
  font-size: 28rpx;
}
.buy {
  background-color: #1e90ff;
}
.sell {
  background-color: #32cd32;
}
.profit {
  color: #ff4500;
  font-weight: bold;
}
/* 设置 row 换行，并让 picker/input 宽度拉满 */
.row.wrap {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 12rpx;
}

.label {
  font-size: 28rpx;
  color: #555;
  min-width: 120rpx; /* label 最小宽度，可以换行 */
  margin-bottom: 6rpx; /* 如果换行，和输入框保持间距 */
}

.input-full,
.picker-full {
  flex: 1;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 6rpx 10rpx;
  font-size: 28rpx;
  min-width: 150rpx; /* 防止太窄 */
}

.tx-record {
  width: calc(100% - 40rpx);
  margin: 0 20rpx 28rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.tx-record.sold {
  border-left: 6rpx solid #32cd32;
  background-color: #d0f0c0;
}

.tx-record.unsold {
  border-left: 6rpx solid #999;
  background-color: #e0e0e5;
}

/* 头部 */
.tx-record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.tx-stock-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
}

.tx-tag {
  padding: 4rpx 14rpx;
  border-radius: 14rpx;
  font-size: 24rpx;
  color: #fff;
  min-width: 70rpx;
  text-align: center;
  line-height: 28rpx;
}

.tx-tag-sold {
  background-color: #32cd32;
}
.tx-tag-unsold {
  background-color: #999;
}

/* 主体布局 */
.tx-record-body {
  display: flex;
  position: relative;
  align-items: center;
  margin-bottom: 12rpx;
}

/* 左侧文案列 */
.tx-left-labels {
  width: 80rpx; /* 固定宽度 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 8rpx;
  font-size: 26rpx;
  color: #333;
}

/* 箭头 */
.tx-arrow {
  position: absolute;
  left: calc(50% + 50rpx);
  transform: translateX(-50%);
  font-size: 36rpx;
  color: #666;
}

/* 右侧内容区 */
.tx-right-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  margin-left: 8rpx;
}
.tx-col {
  width:216rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
/* 左右列各占一半 */
/* 右侧内容区列统一字体样式 */
.tx-left-labels text,.tx-col text {
  font-size: 26rpx; /* 统一字体大小 */
  font-weight: bold; /* 统一字体粗细 */
  color: #222; /* 统一颜色 */
  margin: 6rpx 0; /* 上下间距 */
}
.tx-left-labels .trasprent-text{
    color: transparent;
}

/* 标签字体保持稍大可选 */
.tx-label {
  font-weight: bold;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

