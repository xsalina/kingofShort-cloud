<view class="mine-container">
    <block wx:if="{{userInfo && loaded}}">
        <view class="mine-header">
            <text class="mine-title">我的</text>
        </view>
    </block>
    <!-- 页面标题 -->
    <view class="card user-card">
        <unification-avatar />
        <view class="title">{{userInfo.name || "未登录用户"}}</view>
        <view class="desc">{{userInfo.phone || "注册后可同步你的交易数据"}}</view>
        <button wx:if="{{!userInfo}}" class="login-btn" bindtap="goRegister">注册 / 登录</button>
    </view>
    <!-- 菜单卡片 -->
    <view class="mine-card">
        <!-- 我的交易 -->
        <view class="mine-item" bindtap="goMyTrades">
            <view class="mine-item-left">
                <text class="mine-icon">📊</text>
                <text class="mine-item-text">我的交易</text>
            </view>
            <text class="mine-arrow">›</text>
        </view>
        <!-- 增加股票类型 -->
        <view class="mine-item" bindtap="goAddStockType">
            <view class="mine-item-left">
                <text class="mine-icon">➕</text>
                <text class="mine-item-text">增加股票类型</text>
            </view>
            <text class="mine-arrow">›</text>
        </view>
        <view class="mine-item" bindtap="goSuggest">
            <view class="mine-item-left">
                <image class="service" src="../../assets/images/helpcenter.png" />  
                <text class="mine-item-text">短线交易助手</text>
            </view>
            <text class="mine-arrow">›</text>
        </view>
        <button class="mine-item service-button" open-type="contact">
            <view class="mine-item-left">
                <image class="service" src="../../assets/images/service.png" />   
                <text class="mine-item-text">来信交流</text>
            </view>
            <text class="mine-arrow">›</text>
        </button>
    </view>
</view>