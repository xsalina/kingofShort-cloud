/* =============================================
   1. 全局容器与工具类
   ============================================= */
.container {
  padding: 30rpx;
  background-color: #eff2f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 布局工具 */
.row-between { display: flex; justify-content: space-between; align-items: center; }
.row-start { display: flex; justify-content: flex-start; align-items: center; }

/* =============================================
   2. 头部用户卡片
   ============================================= */
.user-card {
  background: #ffffff;
  border-radius: 24rpx;
  /* 稍微深一点的阴影，凸显层级 */
  box-shadow: 0 8rpx 24rpx rgba(149, 157, 165, 0.1); 
  margin-bottom: 40rpx;
  overflow: hidden;
  position: relative;
}

/* --- 状态 A: 未登录样式 --- */
.user-content-unlogin {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  background: #dfe6e9;
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 24rpx;
}
.default-icon { width: 60rpx; height: 60rpx; opacity: 0.5; }

.unlogin-text { text-align: center; margin-bottom: 40rpx; }
.unlogin-text .title { font-size: 36rpx; font-weight: bold; color: #2d3436; display: block; margin-bottom: 10rpx; }
.unlogin-text .desc { font-size: 26rpx; color: #b2bec3; }

.login-btn-fake {
  padding: 16rpx 60rpx;
  background: #00b894;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 10rpx rgba(0, 184, 148, 0.3);
}

/* --- 状态 B: 已登录样式 --- */
.user-content-login {
  padding: 40rpx;
  /* 给已登录状态加个微渐变背景，显贵 */
  background: linear-gradient(135deg, #ffffff 0%, #f7fcfc 100%);
}

.user-avatar {
  width: 110rpx; height: 110rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-right: 24rpx;
}

/* 纯文字头像背景 */
.user-avatar-text {
  width: 110rpx; height: 110rpx;
  border-radius: 50%;
  background: #00b894; 
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  display: flex; align-items: center; justify-content: center;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.user-text { display: flex; flex-direction: column; }
.user-name { font-size: 36rpx; font-weight: bold; color: #2d3436; margin-right: 16rpx; }
.user-id { font-size: 24rpx; color: #b2bec3; margin-top: 8rpx; }

/* VIP 标签 */
.vip-tag {
  background: #2d3436;
  color: #ffd700;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 900;
  font-style: italic;
  letter-spacing: 1rpx;
}

.setting-icon { font-size: 40rpx; opacity: 0.6; }

/* 数据统计行 */
.user-stats {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}
.stat-item { display: flex; flex-direction: column; align-items: center; flex: 1; }
.stat-item .num { font-size: 36rpx; font-weight: bold; color: #2d3436; font-family: 'DIN Alternate', sans-serif; }
.stat-item .label { font-size: 24rpx; color: #999; margin-top: 6rpx; }


/* =============================================
   3. 菜单列表 (已升级支持左右分栏布局)
   ============================================= */
.menu-list {
  background: #fff;
  border-radius: 24rpx;
  padding: 10rpx 0; /* 上下留白 */
  box-shadow: 0 4rpx 16rpx rgba(149, 157, 165, 0.05);
  margin-bottom: 40rpx;
  overflow: hidden; /* 防止子元素背景溢出圆角 */
}

/* 菜单行基础样式 */
.menu-item {
  padding: 30rpx 40rpx;
  background: #fff;
  transition: background 0.2s;
  
  /* 【关键布局】开启 Flex 实现左右对齐 */
  display: flex;
  justify-content: space-between; 
  align-items: center;
}

/* 点击反馈 */
.menu-item:active { background: #f9f9f9; }

/* --- 内部布局容器 --- */
.menu-left { display: flex; align-items: center; }
.menu-right { display: flex; align-items: center; }

/* --- 元素样式 --- */

/* 1. Emoji/字体图标 */
.menu-icon { 
  font-size: 36rpx; 
  margin-right: 24rpx; 
  width: 40rpx; 
  text-align: center;
}

/* 2. 图片图标 (新增，用于AI菜单) */
.menu-icon-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

/* 3. 菜单主文字 */
.menu-text { 
  font-size: 30rpx; 
  color: #333; 
  font-weight: 500; 
}

/* 4. 右侧箭头 */
.arrow { 
  font-size: 26rpx; 
  color: #ccc; 
  font-family: monospace; /* 稍微瘦长一点的箭头 */
  margin-left: 10rpx;
}

/* 5. 右侧副标题 (新增，用于 DeepSeek 驱动) */
.menu-desc {
  font-size: 24rpx;
  color: #b2bec3;
  font-weight: normal;
}

/* 6. NEW 动态标签 (新增) */
.tag-badge {
  font-size: 18rpx;
  color: #fff;
  /* 珊瑚红渐变 */
  background: linear-gradient(90deg, #ff7675, #fab1a0); 
  padding: 2rpx 10rpx;
  border-radius: 10rpx 10rpx 10rpx 0;
  margin-left: 16rpx;
  font-weight: bold;
  animation: bounce 2s infinite; /* 跳动动画 */
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4rpx); }
}

/* 修复 Button 默认样式 (联系客服按钮) */
.contact-btn {
  width: 100% !important;
  font-weight: 500;
  text-align: left;
  background: #fff;
  border: none;
  line-height: normal;
  margin: 0;
  border-radius: 0;
  /* 确保按钮内部也遵循 Flex 布局 */
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contact-btn::after { border: none; }


/* =============================================
   4. 底部区域
   ============================================= */
.logout-area { margin-bottom: 40rpx; }
.btn-logout {
  background: #fff;
  color: #ff4500;
  font-size: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #cbd5e0;
  margin-bottom: 40rpx;
}