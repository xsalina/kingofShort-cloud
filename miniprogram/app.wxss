/* 全局变量定义 */
page {
  --primary-color: #00b894; /* 主题色 (Teal green) */
  --secondary-color: #0984e3; /* 辅助色 (Blue) */
  --warn-color: #d63031; /* 警告/卖出色 (Red) */
  --success-color: #00b894; /* 成功色 */
  --text-main: #2d3436; /* 主要文字 */
  --text-sub: #636e72; /* 次要文字 */
  --bg-body: #f5f6fa; /* 页面背景 */
  --bg-card: #ffffff; /* 卡片背景 */
  --border-radius-lg: 24rpx;
  --border-radius-md: 16rpx;
  --shadow-sm: 0 2rpx 8rpx rgba(0,0,0,0.05);
  --shadow-md: 0 8rpx 24rpx rgba(0,0,0,0.08);
  
  background-color: var(--bg-body);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  color: var(--text-main);
  box-sizing: border-box;
}

/* 通用容器 */
.container {
  padding: 30rpx;
  padding-bottom: 120rpx; /* 为底部 TabBar 或 FAB 留空 */
}

/* 通用卡片样式 */
.card {
  background: var(--bg-card);
  border-radius: var(--border-radius-md);
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

/* 通用Flex行 */
.row-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.row-start {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.row-center {
    display: flex;
    justify-content: center;
    align-items: center;
}

/* 通用按钮 */
.btn-primary {
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 50rpx;
  font-weight: 600;
  font-size: 32rpx;
  padding: 24rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 184, 148, 0.3);
}
.btn-primary:active {
    opacity: 0.9;
    transform: scale(0.99);
}
.btn-danger {
    background-color: var(--warn-color);
    color: #fff;
    border-radius: 50rpx;
    font-weight: 600;
    padding: 24rpx 0;
}

/* 通用输入框组 */
.form-group {
  margin-bottom: 30rpx;
}
.form-label {
  font-size: 26rpx;
  color: var(--text-sub);
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
}
.form-input {
  background: #f1f2f6;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: var(--text-main);
  width: 100%;
  box-sizing: border-box;
  border: 1rpx solid transparent;
  transition: all 0.3s;
}
.form-input:focus {
    border-color: var(--primary-color);
    background: #fff;
}

/* 状态标签 */
.badge {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  font-weight: 600;
}
.badge-holding { background: #e3fcef; color: #00b894; } /* 未卖 */
.badge-sold { background: #ffeaea; color: #d63031; } /* 已卖 */
.badge-partial { background: #fff4e6; color: #fdcb6e; } /* 部分卖 */

/* 辅助文本类 */
.text-sub { color: var(--text-sub); }
.text-primary { color: var(--primary-color); }
.text-warn { color: var(--warn-color); }
.font-bold { font-weight: 600; }
.font-lg { font-size: 36rpx; }
.font-xl { font-size: 48rpx; }