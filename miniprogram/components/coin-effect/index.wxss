/* 容器 */
.container {
  position: fixed;
  top: 0; left: 0; width: 100vw; height: 100vh;
  z-index: 10000; pointer-events: none; overflow: hidden;
}

/* 金币基础 */
.coin {
  position: absolute;
  top: -120rpx; /* 起始点 */
  z-index: 1;
  opacity: 0;
  /* 默认使用 ease-in 让下落有重力加速感 */
  animation-timing-function: cubic-bezier(0.5, 0.05, 1, 0.5);
  animation-fill-mode: forwards;
}

.coin-img {
  width: 100%; height: 100%;
  filter: drop-shadow(0 4rpx 4rpx rgba(0,0,0,0.3));
  /* 只有简单的晃动，没有翻转 */
  animation: wobble 2s ease-in-out infinite;
}

@keyframes wobble {
  0%, 100% { transform: rotate(-10deg); }
  50% { transform: rotate(10deg); }
}

/* ---------------- 核心轨迹动画 ---------------- */
/* ... 前面的 .container, .coin, .coin-img 等样式保持不变 ... */
/* ... 只要替换下面的 @keyframes 动画部分 ... */

/* ---------------- 核心轨迹动画 (修复版：相对位移) ---------------- */

/* 1. 直落 (Type: Straight) */
.type-straight { animation-name: dropStraight; }
@keyframes dropStraight {
  0% { transform: translateY(-100rpx); opacity: 1; }
  100% { transform: translateY(120vh); opacity: 1; }
}

/* 2. 左弹 (Type: Left) */
/* 轨迹：下落 -> 触底 -> 向左上方弹起 -> 掉落 */
.type-left { animation-name: bounceLeft; }
@keyframes bounceLeft {
  0% { 
    opacity: 1; 
    transform: translate(0, -100rpx) scale(0.8); 
  }
  
  /* 第一次触底 */
  40% { 
    transform: translate(0, 60vh) scale(1); 
  } 
  
  /* 快速反弹 (向左偏移 150rpx) */
  55% { 
    /* translate(X, Y) -> X是相对位移 */
    transform: translate(-150rpx, 35vh) scale(1.1) rotate(-45deg); 
  } 
  
  /* 二次掉落 */
  100% { 
    opacity: 0; 
    transform: translate(-200rpx, 110vh) scale(0.8) rotate(-90deg); 
  }
}

/* 3. 右弹 (Type: Right) */
/* 轨迹：下落 -> 触底 -> 向右上方弹起 -> 掉落 */
.type-right { animation-name: bounceRight; }
@keyframes bounceRight {
  0% { 
    opacity: 1; 
    transform: translate(0, -100rpx) scale(0.8); 
  }
  
  /* 第一次触底 */
  40% { 
    transform: translate(0, 65vh) scale(1); 
  }
  
  /* 快速反弹 (向右偏移 150rpx) */
  55% { 
    transform: translate(150rpx, 40vh) scale(1.1) rotate(45deg); 
  }
  
  /* 二次掉落 */
  100% { 
    opacity: 0; 
    transform: translate(200rpx, 110vh) scale(0.8) rotate(90deg); 
  }
}

/* 4. 直线回弹 (Type: Up) */
.type-up { animation-name: bounceUp; }
@keyframes bounceUp {
  0% { 
    opacity: 1; 
    transform: translateY(-100rpx); 
  }
  
  /* 第一次触底 */
  40% { 
    transform: translateY(70vh) scaleY(0.9); 
  }
  
  /* 快速反弹 (原地向上) */
  55% { 
    transform: translateY(30vh) scaleY(1.05); 
  }
  
  /* 二次掉落 */
  100% { 
    opacity: 0; 
    transform: translateY(110vh) scale(0.8); 
  }
}

