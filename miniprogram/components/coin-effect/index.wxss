/* ---------------- 收益数字样式 (红色盈利版) ---------------- */
.profit-layer {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
  text-align: center;
  /* 加上一点文字发光效果，让红色更透亮 */
  text-shadow: 0 0 30rpx rgba(255, 69, 0, 0.2);
}

.profit-main {
  opacity: 0; /* 默认隐藏 */
}

/* "收益到账" 标签 */
.profit-label {
  font-size: 32rpx;
  color: #ff6b6b; /* 浅红色 */
  font-weight: bold;
  letter-spacing: 4rpx;
  margin-bottom: 10rpx;
}

/* 收益数字 */
.profit-num {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 90rpx; /* 字号够大才爽 */
  font-weight: 700;
  
  /* 【修改点】使用红色渐变，模拟红宝石质感 */
  background: linear-gradient(180deg, #ff7e5f 0%, #d63031 100%);
  -webkit-background-clip: text;
  color: transparent;
  
  /* 给文字加深红色的描边，增加立体感 */
  -webkit-text-stroke: 3rpx #c0392b;
  /* 底部加投影 */
  filter: drop-shadow(0 6rpx 0 #a93226);
}

/* 绑定新动画 */
.animating {
  /* 3秒完成：变大 -> 停留 -> 变小消失 */
  animation: growAndShrink 3s ease-in-out forwards;
}

/* 【关键】新动画逻辑 */
@keyframes growAndShrink {
  /* 阶段1：慢慢变大 (0% - 30%) */
  0% {
    opacity: 0;
    transform: scale(0);
  }
  30% {
    opacity: 1;
    transform: scale(1.5); /* 放大到 1.5 倍 */
  }
  
  /* 阶段2：悬停展示 (30% - 70%) */
  70% {
    opacity: 1;
    transform: scale(1.5); /* 保持大小不变，让用户看清楚 */
  }
  
  /* 阶段3：变小消失 (70% - 100%) */
  100% {
    opacity: 0;
    transform: scale(0); /* 缩小至无 */
  }
}