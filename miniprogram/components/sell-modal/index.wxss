/* ---------------- 布局工具类 ---------------- */
.row-between { display: flex; justify-content: space-between; align-items: center; }
.font-bold { font-weight: bold; }
.font-lg { font-size: 36rpx; color: #333; }
.font-xl { font-size: 40rpx; font-weight: bold; font-family: 'DIN Alternate', sans-serif; }
.text-sub { color: #999; font-size: 26rpx; }
.text-profit { color: #ff4500; }
.text-loss { color: #2ecc71; }

/* ---------------- 遮罩层 ---------------- */
.modal-mask {
  position: fixed;
  left: 0;
  width: 100%;
  height: 100%;
  
  /* 【关键修复】默认 top 在屏幕外面，防止上滑看到 */
  top: 100vh; 
  
  background: rgba(0,0,0,0.6);
  z-index: 1000;
  
  /* 透明度动画 */
  opacity: 0;
  
  /* 关闭时：延迟 0.3s 再把 top 移走，等待透明度变完 */
  transition: opacity 0.3s, top 0s linear 0.3s;
  
  display: flex;
  align-items: flex-end; /* 底部对齐 */
}

/* 显示状态 */
.modal-mask.show {
  top: 0; /* 移回屏幕 */
  opacity: 1;
  /* 打开时：立即把 top 移回来，不延迟 */
  transition: opacity 0.3s, top 0s linear 0s;
}

/* ---------------- 弹窗内容 ---------------- */
.modal-content {
  width: 100%;
  background: #fff; /* 白色背景 */
  border-radius: 30rpx 30rpx 0 0;
  padding: 40rpx;
  
  /* 【关键修复】确保 padding 撑开时背景色也是白色的 */
  box-sizing: border-box; 
  
  /* 进场动画：默认藏在底下 */
  transform: translateY(100%);
  
  /* 【关键修复】只对 transform 做动画，不对 padding 做动画！
     这样键盘弹起时，高度是瞬间变化的，不会出现文字跟不上输入框掉下来的情况 */
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
}

.modal-mask.show .modal-content {
  transform: translateY(0);
}

/* ---------------- 内部元素样式 ---------------- */
.modal-header { margin-bottom: 40rpx; }
.close-btn { font-size: 48rpx; color: #b2bec3; padding: 10rpx; line-height: 0.8; }

.modal-tips {
  background: #f7f9fc; padding: 24rpx; border-radius: 16rpx;
  font-size: 26rpx; color: #636e72; margin-bottom: 40rpx;
  border: 1rpx solid #edf2f7;
}

.form-group { margin-bottom: 30rpx; }
.form-row-2 { display: flex; gap: 24rpx; margin-bottom: 30rpx; }
.form-row-2 input { margin-bottom: 0; }

.form-input {
  background: #f7f9fc; 
  padding: 24rpx; 
  border-radius: 16rpx;
  font-size: 30rpx; 
  width: 100%; 
  box-sizing: border-box; 
  height: 90rpx;
}

.calc-result {
  padding: 30rpx 0;
  border-top: 1rpx solid #f0f0f0; 
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 40rpx;
}

.modal-footer { display: flex; gap: 30rpx; }
.btn-cancel, .btn-confirm {
  flex: 1; 
  padding: 24rpx 0; 
  border-radius: 50rpx; 
  font-weight: 600; 
  font-size: 32rpx;
  display: flex; 
  align-items: center; 
  justify-content: center;
}
.btn-cancel { background: #f1f2f6; color: #636e72; }
.btn-confirm { background: #ff4500; color: #fff; box-shadow: 0 6rpx 16rpx rgba(255, 69, 0, 0.25); }
.btn-confirm.is-loading { opacity: 0.8; background: #e03e00; }