/* 组件容器样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
}

.trans-card {
  padding: 24rpx 30rpx;
  border: 1rpx solid transparent;
  transition: all 0.2s;
}

.trans-card:active {
  background-color: #fafafa;
  transform: scale(0.99);
}

/* 布局工具类 */
.row-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.text-center {
  align-items: center;
}

.text-right {
  align-items: flex-end;
}

.font-bold {
  font-weight: bold;
}

/* 股票信息 */
.stock-info {
  display: flex;
  flex-direction: column;
}

.stock-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
  color: #2d3436;
}

.trans-date {
  font-size: 24rpx;
  color: #b2bec3;
}

/* 状态徽章颜色定义 */
.badge {
  padding: 6rpx 18rpx;
  border-radius: 8rpx; /* 改成圆角矩形，稍微正式一点 */
  font-size: 22rpx;
  font-weight: 500;
}

/* status: 0 (未卖 - 绿色) */
.badge-unSold {
  background: #e6f7ff; /* 浅蓝底 */
  color: #1890ff;      /* 蓝字 */
  border: 1rpx solid rgba(24, 144, 255, 0.2); /* 可选：加个细边框增加精致感 */
}

/* status: 1 (已卖 - 红色) */
.badge-sold {
  background: #f5f5f5; /* 浅灰底 */
  color: #8c8c8c;      /* 深灰字 */
}

/* status: 2 (部分卖 - 橙色) */
.badge-partial {
  background: #fff7e6; /* 浅橙底 */
  color: #fa8c16;      /* 橙字 */
}

/* 详情区域灰色块 */
.trans-details {
  background: #f7f8fa;
  padding: 24rpx;
  border-radius: 12rpx;
}

.detail-col {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 22rpx;
  color: #636e72;
  margin-bottom: 8rpx;
}

.value {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3436;
}

/* 收益颜色 */
.text-primary {
  color: #ff4500; /* 盈利绿 */
  font-weight: bold;
}

.text-warn {
  color: #00b894; /* 亏损红 */
  font-weight: bold;
}